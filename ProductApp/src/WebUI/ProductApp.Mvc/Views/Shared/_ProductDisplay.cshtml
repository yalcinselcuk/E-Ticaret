@model ProductDisplayResponse
<div class="d-flex align-items-stretch">
    <div class="card">
        <img src="@Model.ImageUrl" class="img-fluid">
        <div class="card-body">
            <h4 class="card-title" style="font-size:18px;">@Model.Name - @Model.Id</h4>
            <p class="card-text" style="font-size:14px">@Model.Description</p>
            <p class="card-text">@Model.Price TL</p>
        </div>
    </div>
</div>
<br />
